@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="~/lib/bootstrap/dist/css/Registroylogeo.css" rel="stylesheet" />
<h1>Inicio Sesión</h1>
<div class="row">
    <div class="col-md-4">
        <h4 class="crear">Iniciando Sesión</h4>
        <section>
            <form id="account" method="post">
                <div class="form-group">
                    <label asp-for="Input.Email">Correo: </label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña: </label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-danger">¿Olvidaste la contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-danger">Registrar un nuevo usuario</a>
                    </p>
                    <p>
                        <button type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-danger">Reenviar confirmación por correo</button>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <img src="~/css/masculino.png" />
    </div>
</div>

<div class="area">
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
